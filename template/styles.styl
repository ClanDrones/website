@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap')

:root
  --primary: #58A4B0
  --secondary: #373F51
  --tertiary: #A9BCD0
  --foreground: #1B1B1E
  --light: #D8DBE2
  --background: #D8DBE2

*:not(ul, ol, li)
  box-sizing: border-box
  margin: 0
  padding: 0

body
  background-color: var(--background)
  color: var(--foreground)
  font-family: 'Roboto', sans-serif
  min-height: 100vh
  display: flex
  flex-direction: column

a
  text-decoration: none
  color: var(--primary)
  &:hover
    color: var(--tertiary)
a, p.link
  transition: all 300ms linear

header
  position: relative
  border-bottom: 1px solid var(--secondary)
  background-color: #000
  display: flex
  align-items: center
  justify-content: space-between
  height: 150px
  padding: 20px
  &:before
    position: absolute
    content: ""
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: url($siteUrl + "/images/header.jpg") no-repeat center
    background-size: cover
    opacity: 0.3
  .expansor
    flex-grow: 1
  a
    position: relative
    display: flex
    align-items: center
    img
      width: 120px
      height: 120px
    span
      font-size: 1.2em
      margin-left: 20px
    &.homeTitle span
      font-size: 2em
      font-weight: 700
      letter-spacing: 1px

footer
  border-top: 1px solid var(--secondary)
  text-align: center
  padding 20px 0
  margin-top: auto

h1
  color: var(--secondary)
h2
  color: var(--foreground)

.container
  display: grid
  grid-template-columns: 1fr 250px
  grid-gap: 20px

@media (max-width: 800px)
  .container
    grid-template-columns: 1fr

.container, .xml
  margin: 20px

.content .postLayout
  display: flex
  justify-content: space-between
  img
    max-width: 50%
  .post
    flex-grow: 1
    margin-right: 20px
    text-align: right

.sidebar
  border-left: 1px solid var(--secondary)
  padding-left: 20px
  .item
    display: block
    padding: 5px 0

.content, .xml
  display: flex
  flex-direction: column
  .navigator
    display: flex
    justify-content: space-between
  & > *
    display: block
    margin: 5px 0
  script, style
    display: none
  img
    max-width: 100%
    border-radius: 10px
    display: block
    margin: auto
  p
    line-height: 1.3em
  p > code
    background-color var(--light)
    padding: 2px 4px
    border-radius: 4px
  blockquote
    position: relative
    padding: 4px 20px
    opacity: 0.5
    &:before
      position: absolute
      content: ""
      width: 3px
      height: 100%
      top: 0
      left: 0
      background-color: var(--primary)
  pre
    width: 100%
    background-color: var(--secondary)
    padding: 10px
    margin: 0 auto
    border-radius: 6px
    overflow: auto
    display: flex
    line-height: 1.6em
    code
      font-size: 1.1em
      max-width: 10px

@import "blogList.styl"
